{
	"env": {
		"browser": true,
		"es2022": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2023,
		"sourceType": "module"
	},
	"rules": {
		"no-param-reassign": "error",
		"indent": ["error", "tab"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],

		"vue/script-indent": ["error", "tab"],
		"vue/html-indent": ["error", "tab"]
	}
}
